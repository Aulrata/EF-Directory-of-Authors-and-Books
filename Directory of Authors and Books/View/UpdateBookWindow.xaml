<Window x:Class="Directory_of_Authors_and_Books.View.UpdateBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Directory_of_Authors_and_Books.View"
        mc:Ignorable="d"
        Title="UpdateBookSindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" Text="Название книги" VerticalAlignment="Top"/>
        <TextBox x:Name="Title" HorizontalAlignment="Center" Margin="0,84,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <TextBlock HorizontalAlignment="Center" Margin="0,135,0,0" TextWrapping="Wrap" Text="Год выпуска" VerticalAlignment="Top"/>
        <TextBox x:Name="YearOfIssue" HorizontalAlignment="Center" Margin="0,156,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>

        <Button Content="Изменить книгу" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Height="32" Width="120" Click="UpdateBookButton"/>
    </Grid>
</Window>
